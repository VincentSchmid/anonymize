{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Anonymize",
  "version": "0.1.0",
  "identifier": "com.anonymize.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Anonymize - Swiss Document Anonymization",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://127.0.0.1:14200 https://github.com https://api.github.com; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/anonymize-api"],
    "resources": ["resources/entity-config.json"]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "endpoints": [
        "https://github.com/VincentSchmid/anonymize/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVFQ0UyQ0I1NENBNTJDM0QKUldROUxLVk10U3pPN2llb1Vmd1BONkU4V1VLTGYyU3RmZWwrTUg3MUo2Z1p6VXRSU3d4MHVlTFIK"
    }
  }
}
